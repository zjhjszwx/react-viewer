{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": ["node_modules", "__tests__"]
}
